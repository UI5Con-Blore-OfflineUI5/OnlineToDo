<Dialog xmlns="sap.m" title="Edit ToDo">
	<FlexBox direction="Row" alignItems="Start" justifyContent="SpaceBetween">
		<VBox class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom">
			<TextArea width="100%" text="{Content}" rows="2"/>
			<Label text="Due Date"/>
			<DatePicker/>
			<Label text="Last Changed By"/>
			<Text text="{LastChangedBy}"/>
			<CheckBox text="Done" valueState="Success" class="sapUiTinyMarginEnd" select=".fnToDoDone"/>
		</VBox>
	</FlexBox>
	<beginButton>
		<Button text="Save" type="Emphasized" press="fnSave"/>
	</beginButton>
	<endButton>
		<Button text="Cancel" press=".fnClose"/>
	</endButton>
</Dialog>