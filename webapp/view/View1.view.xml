<mvc:View controllerName="UI5ConOnlineApp.controller.View1" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m">
	<FlexBox alignItems="Center" justifyContent="Center">
		<Panel expandable="false" width="400px">
			<List id="ToDoList" mode="SingleSelectMaster" rememberSelections="false" selectionChange=".fnEditToDo" items="{ path: '/ToDos', sorter: { path: 'Content', descending: true }}">
				<headerToolbar>
					<Toolbar>
						<Title text="ToDos" level="H2"/>
						<ToolbarSpacer/>
						<Button icon="sap-icon://add" press="handleNewToDoButtonPress"/>
					</Toolbar>
				</headerToolbar>
				<!--<infoToolbar>-->
				<!--	<Toolbar active="true">-->
				<!--		<Label text="Online"/>-->
				<!--	</Toolbar>-->
				<!--</infoToolbar>-->
				<CustomListItem>
					<FlexBox direction="Row" alignItems="Start" justifyContent="SpaceBetween">
						<VBox class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom">
							<Title text="{Content}"/>
							<ObjectStatus class="sapUiSmallMarginBottom" text="{path: 'DueDate', formatter:'.formatter.dueDate'}"
								state="{path: 'DueDate', formatter:'.formatter.statusColor'}"/>
							<Text text="{LastChangedBy}"/>
						</VBox>
						<CheckBox text="Done" valueState="Success" class="sapUiTinyMarginEnd" select=".fnToDoDone"/>
					</FlexBox>
				</CustomListItem>
				<!--<StandardListItem title="{Content}" type="Active"/>-->
			</List>
		</Panel>
	</FlexBox>
</mvc:View>